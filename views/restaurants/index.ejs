<%- include("../partials/headers") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
		<h1>Welcome to Restaurants in Ann Arbor!</h1>
		<p>
			Come and enjor these Great Restaurants
		</p>
		<p>
			<a class="btn btn-primary btn-large" href="restaurants/new">Add a New Restraunt</a>
		</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
<!-- wrap minimizes the space needed		 -->
		<%restaurants.forEach(function(restaurant){%>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%=restaurant.image %>">
				<div class="caption">
					<h4><%=restaurant.name%></h4>
				</div>
				<p>
					<a href="/restaurants/<%= restaurant._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>
	<%})%>
	</div>


	
</div>
	

<%- include("../partials/footers") %>