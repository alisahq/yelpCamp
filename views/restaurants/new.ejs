<%- include("../partials/headers") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">
		Create a new restaurant!
		</h1>
		<div style="width:30%; margin:25px auto;">
		<!--here the campgrounds refers to the post request route  -->
			<form action="/restaurants" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant" placeholder="enter the restraunt name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="enter img url">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="price" placeholder="enter the average price for this restaurant" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="enter your description for this restraunt">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-default btn-block">
						Submit!
					</button>
				</div>
			</form>
			<a href="/restaurants">Go Back!</a>
		</div>
	</div>
	
</div>


<%- include("../partials/footers") %>